{
  "name": "@packmule/typescript-pack",
  "description": "Packmule pack to transpile TypeScript files.",
  "version": "2.0.0",
  "license": "MIT",
  "repository": "github:packmule/packmule",
  "bugs": "https://github.com/packmule/packmule/issues",
  "type": "module",
  "exports": "./module/index.js",
  "types": "module/",
  "keywords": [
    "webpack",
    "packmule",
    "packmule-pack"
  ],
  "engines": {
    "node": "14||16||18"
  },
  "author": {
    "name": "Thomas Deinhamer",
    "email": "t.deinhamer@pixelart.at",
    "url": "https://www.pixelart.at/"
  },
  "scripts": {
    "build": "esbuild src/index.ts src/**/*.ts --platform=node --target=node14.13 --outdir=module/"
  },
  "files": [
    "module/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "browserslist-to-esbuild": "^1.1.0",
    "esbuild-loader": "^2.16.0",
    "eslint-formatter-pretty": "^4.0.0",
    "eslint-webpack-plugin": "^3.0.1",
    "micromatch": "^4.0.2"
  },
  "devDependencies": {
    "@packmule/core": "workspace:^",
    "@types/micromatch": "^4.0.0",
    "esbuild": "^0.15.14",
    "webpack": "^5.73.0"
  },
  "peerDependencies": {
    "@packmule/core": "workspace:^"
  },
  "optionalDependencies": {
    "eslint": "*"
  }
}

{
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "run-s clean build test",
    "clean": "run-p clean:*",
    "clean:builds": "del-cli packages/*/module packages/*/generators",
    "clean:caches": "del-cli packages/*/*.tsbuildinfo",
    "clean:dependencies": "del-cli packages/*/node_modules",
    "build": "run-s build:*",
    "build:compile": "tsc --build",
    "watch": "run-s clean watch:*",
    "watch:compile": "tsc --build --watch",
    "format": "run-s format:*",
    "format:fix": "prettier --write packages/**",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "devDependencies": {
    "@types/node": "^12.7.12",
    "ava": "^3.10.1",
    "del-cli": "^3.0.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  }
}

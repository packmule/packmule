{
  "private": true,
  "type": "module",
  "engines": {
    "node": "16",
    "pnpm": "7"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "test": "turbo run test",
    "reset": "del-cli packages/*/module/ packages/*/.turbo/ packages/*/node_modules/ node_modules/",
    "format": "prettier --write packages/**",
    "publish:nightly": "lerna publish --yes --canary --preid=nightly --dist-tag=nightly --force-publish=*",
    "publish:next": "lerna publish --yes --canary --preid=next --dist-tag=next --force-publish=*"
  },
  "devDependencies": {
    "@types/node": "^16.11.38",
    "del-cli": "^4.0.1",
    "husky": "^8.0.1",
    "lerna": "^5.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "2.6.2",
    "turbo": "^1.2.14",
    "typescript": "^4.0.2",
    "webpack": "^5.18.0"
  },
  "packageManager": "pnpm@7.1.8"
}

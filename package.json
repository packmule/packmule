{
  "private": true,
  "scripts": {
    "prepare": "lerna bootstrap --hoist",
    "reset": "run-s clean prepare build",
    "clean": "run-p clean:*",
    "clean:modules": "del-cli packages/*/node_modules/",
    "clean:builds": "del-cli packages/*/module/ packages/*/generators/",
    "clean:caches": "del-cli packages/*/*.tsbuildinfo",
    "build": "run-s build:*",
    "build:clean": "run-p clean:builds clean:caches",
    "build:compile": "tsc --build",
    "watch": "run-s watch:*",
    "watch:clean": "run-p clean:builds clean:caches",
    "watch:compile": "tsc --build --watch",
    "format": "run-s format:*",
    "format:fix": "prettier --write packages/**",
    "test": "ava",
    "test:watch": "ava --watch",
    "publish:nightly": "lerna publish --yes --canary --preid=nightly --dist-tag=nightly --force-publish=*"
  },
  "devDependencies": {
    "@types/node": "^12.7.5",
    "@types/webpack": "^4.39.1",
    "ava": "^2.4.0",
    "del-cli": "^2.0.0",
    "husky": "^3.0.5",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "1.18.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "webpack": "^5.0.0-alpha.26"
  }
}

{
  "private": true,
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "prepare": "run-s clean setup build test",
    "clean": "run-p clean:*",
    "clean:builds": "del-cli packages/*/module packages/*/generators",
    "clean:caches": "del-cli packages/*/*.tsbuildinfo",
    "setup": "run-s setup:*",
    "setup:bootstrap": "lerna bootstrap --hoist",
    "build": "run-s build:*",
    "build:compile": "tsc --build",
    "watch": "run-s clean watch:*",
    "watch:compile": "tsc --build --watch",
    "format": "run-s format:*",
    "format:fix": "prettier --write packages/**",
    "test": "ava",
    "test:watch": "ava --watch",
    "publish:nightly": "lerna publish --yes --canary --preid=nightly --dist-tag=nightly --force-publish=*",
    "publish:next": "lerna publish --yes --canary --preid=next --dist-tag=next --force-publish=*"
  },
  "devDependencies": {
    "@types/node": "^12.7.12",
    "ava": "^3.12.1",
    "del-cli": "^3.0.1",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "webpack": "^5.12.3"
  }
}
